{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-console": "warn",
    "no-debugger": "warn",
    "no-undefined": "error",
    "no-undef": "error",
    "eqeqeq": ["error", "always"],
    "no-eval": "error",
    "no-implied-eval": "error",
    "no-with": "error",
    "prefer-const": "warn",
    "no-var": "error",
    "no-unused-vars": ["warn", { "args": "after-used", "ignoreRestSiblings": true }],
    "indent": ["warn", 2],
    "quotes": ["warn", "single", { "avoidEscape": true }],
    "semi": ["error", "always"],
    "comma-dangle": ["warn", "es5"],
    "no-trailing-spaces": "warn"
  },
  "overrides": [
    {
      "files": ["*.html"],
      "env": { "browser": true },
      "rules": { "no-console": "off" }
    }
  ]
}
